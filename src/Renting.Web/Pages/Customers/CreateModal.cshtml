@page
@model Renting.Web.Pages.Customers.CreateModalModel
@using Renting.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<RentingResource> L
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@{
    Layout = null;
}

<abp-dynamic-form abp-model="Customer" asp-page="/Customers/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCustomer"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
